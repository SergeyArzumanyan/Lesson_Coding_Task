{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@exceptions/*": ["src/exceptions/*"]
    }
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}